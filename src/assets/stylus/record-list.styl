@import './variables'
.record
  color black
  background white
  padding 10px 30px
  border-radius 10px
  margin 0 auto 10px
  display block
  .date
    font-size 17px
    padding 0 10px 10px
    border-bottom 1px solid #EAEAEA
    display flex
    align-items center
    justify-content space-between
    span
      display flex
      align-items center
    .van-icon-clock-o
      font-size 20px
      color $primary-color
      margin-right 5px
  .info
    font-size 16px
    padding 10px 10px 10px 15px
    display flex
    justify-content space-between
  .amount
    color $primary-color
.list
  &:empty
    &:before
      content ''
      width 100%
      height 60px
      background url('~assets/img/empty.png') center no-repeat
      background-size contain
      margin 10vh 0 5vh
      display block
    &:after
      content '暂无数据信息'
      width 100%
      text-align center
      font-size 3.5vw
      color gray
      display block