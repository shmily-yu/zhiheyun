@import './variables'
.detail
  width 100%
  height 100%
.record
  background white
  border-radius 10px
  margin-bottom 10px
.title
  padding 25px
  border-bottom 1px solid #EAEAEA
.note
  padding 20px 25px
  display flex
  justify-content space-between
  span
    color #878789
  .amount
    color $primary-color
.container
  &:empty
    &:before
      content ''
      width 100%
      height 60px
      background url('~assets/img/empty.png') center no-repeat
      background-size contain
      margin 10vh 0 5vh
      display block
    &:after
      content '暂无数据信息'
      width 100%
      text-align center
      font-size 3.5vw
      color gray
      display block